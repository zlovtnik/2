# Kitchen Management System - Development Makefile

.PHONY: help build test run clean dev install-deps setup kitchen-setup tasks

# Default target
help: ## Show this help message
	@echo "ğŸ½ï¸  Kitchen Management System - Development Commands"
	@echo "=================================================="
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-20s\033[0m %s\n", $$1, $$2}'

# Setup and Installation
setup: ## Initial project setup (run this first!)
	@echo "ğŸ”§ Setting up Kitchen Management System development environment..."
	@make install-deps
	@make kitchen-setup
	@echo "âœ… Setup complete! Run 'make dev' to start development"

install-deps: ## Install development dependencies
	@echo "ğŸ“¦ Installing Rust dependencies..."
	cargo fetch
	@echo "ğŸ Setting up Python environment for scripts..."
	python3 -m pip install --user requests streamlit pandas

kitchen-setup: ## Initialize kitchen management database and configs
	@echo "ğŸ—„ï¸  Setting up database..."
	docker-compose up -d postgres redis
	sleep 5
	sqlx migrate run
	@echo "ğŸ“‹ Initializing task tracking..."
	python3 scripts/task_tracker.py --init || echo "Task tracker already initialized"

# Development Commands
dev: ## Start development environment (backend + frontend + db)
	@echo "ğŸš€ Starting Kitchen Management System development environment..."
	docker-compose up -d postgres redis
	@echo "Starting Rust backend..."
	cargo run &
	@echo "Starting Streamlit frontend..."
	streamlit run app.py &
	@echo "âœ… Development environment started!"
	@echo "ğŸ“ Backend API: http://localhost:3000"
	@echo "ğŸ–¥ï¸  Frontend UI: http://localhost:8501"

run: ## Run the Rust backend server
	@echo "ğŸ¦€ Starting Rust backend server..."
	cargo run

frontend: ## Run the Streamlit frontend
	@echo "ğŸ–¥ï¸  Starting Streamlit frontend..."
	streamlit run app.py

# Build and Test
build: ## Build the project in release mode
	@echo "ğŸ”¨ Building Kitchen Management System..."
	cargo build --release

test: ## Run all tests
	@echo "ğŸ§ª Running tests..."
	cargo test --lib
	cargo test --test integration
	@echo "âœ… All tests passed!"

test-unit: ## Run unit tests only
	@echo "ğŸ”¬ Running unit tests..."
	cargo test --lib

test-integration: ## Run integration tests only
	@echo "ğŸ”— Running integration tests..."
	cargo test --test integration

test-watch: ## Run tests in watch mode
	@echo "ğŸ‘€ Running tests in watch mode..."
	cargo watch -x test

# Code Quality
lint: ## Run linting and formatting checks
	@echo "ğŸ§¹ Running code quality checks..."
	cargo fmt --check
	cargo clippy -- -D warnings
	@echo "âœ… Code quality checks passed!"

format: ## Format code
	@echo "âœ¨ Formatting code..."
	cargo fmt

fix: ## Fix linting issues
	@echo "ğŸ”§ Fixing linting issues..."
	cargo clippy --fix --allow-dirty
	cargo fmt

# Database Management
db-up: ## Start database services
	@echo "ğŸ—„ï¸  Starting database services..."
	docker-compose up -d postgres redis

db-down: ## Stop database services
	@echo "ğŸ›‘ Stopping database services..."
	docker-compose down

db-reset: ## Reset database (WARNING: destroys all data!)
	@echo "âš ï¸  Resetting database (this will destroy all data)..."
	@read -p "Are you sure? [y/N] " -n 1 -r; \
	if [[ $$REPLY =~ ^[Yy]$$ ]]; then \
		docker-compose down -v; \
		docker-compose up -d postgres redis; \
		sleep 5; \
		sqlx migrate run; \
		echo "âœ… Database reset complete!"; \
	else \
		echo "âŒ Database reset cancelled."; \
	fi

migrate: ## Run database migrations
	@echo "ğŸ”„ Running database migrations..."
	sqlx migrate run

# Task Management
tasks: ## Show task tracker
	@echo "ğŸ“‹ Opening task tracker..."
	python3 scripts/task_tracker.py

task-status: ## Show quick task status
	@echo "ğŸ“Š Task Status Summary:"
	@python3 -c "
